<%= simple_form_for [@camp,@help], :html => { :class=> "form-horizontal" } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label => "Nome" %>
    <%= f.input :email %>
    <%= f.input :start_date, :label => "Data di arrivo", :as => :datepicker %>
    <%= f.input :end_date, :label => "Data di partenza", :as => :datepicker %>
    <%= f.input :comment, :label => "Commento", :input_html => { :class => 'input-xlarge', :rows => 8 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :value => "Inserisci il servizio", :class => 'btn-primary' %>
    <%= submit_tag t('helpers.buttons.cancel', :default => 'Cancella'), :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>
