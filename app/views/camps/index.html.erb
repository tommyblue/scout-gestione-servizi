<h1>Listing camps</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Place</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @camps.each do |camp| %>
  <tr>
    <td><%= camp.title %></td>
    <td><%= camp.place %></td>
    <td><%= camp.start_date %></td>
    <td><%= camp.end_date %></td>
    <td><%= camp.comment %></td>
    <td><%= link_to 'Show', camp %></td>
    <td><%= link_to 'Edit', edit_camp_path(camp) %></td>
    <td><%= link_to 'Destroy', camp, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

